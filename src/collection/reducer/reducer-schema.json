{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsVaReducer",
  "title": "Create reducer in ngrx store module.",
  "type": "object",
  "properties": {
    "actionName": {
      "type": "string",
      "description": "Action name.",
      "x-prompt": "What is the action name?"
    },
    "stateDir": {
      "type": "string",
      "description": "Path to state directory.",
      "x-prompt": "What is the path to state directory?"
    },
    "propsToUpdate": {
      "type": "string",
      "description": "Properties to update.",
      "x-prompt": "What properties in state should be updated?"
    },
    "selectors": {
      "type": "boolean",
      "default": true,
      "description": "Create selectors for provided properties?",
      "x-prompt": "Would you like to add ngrx selectors?"
    },
    "facade": {
      "type": "boolean",
      "default": false,
      "description": "Create facade for generated selectors.",
      "x-prompt": "Would you like to create facade for generated selectors?"
    },
    "actionPayload": {
      "type": "boolean",
      "default": true,
      "description": "Does action "
    }
  }
}
